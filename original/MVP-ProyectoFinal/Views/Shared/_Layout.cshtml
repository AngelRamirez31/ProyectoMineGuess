<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MineGuess</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/MVP_ProyectoFinal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="mg-shell">
        <header class="mg-header">
            <div class="container mg-header-inner">
                <div class="mg-logo">
                    <span class="mg-logo-title">MINEGUESS</span>
                    <span class="mg-logo-subtitle">Minecraft guessing challenge</span>
                </div>
                <nav class="mg-nav">
                    <a asp-controller="Home" asp-action="Index" class="mg-nav-link">Home</a>
                    <a asp-controller="Juego" asp-action="Index" class="mg-nav-link">Blocks</a>
                    <a asp-controller="Entidad" asp-action="Index" class="mg-nav-link">Entities</a>
                    <a asp-controller="Bioma" asp-action="Index" class="mg-nav-link">Biomes</a>
                </nav>
                <div class="mg-header-right">
                    <div class="mg-auth">
                        @if (User != null && User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <span class="mg-auth-user">@User.Identity.Name</span>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="mg-auth-logout-form">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="mg-auth-link">Log out</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="mg-auth-link">Log in</a>
                            <a asp-controller="Account" asp-action="Register" class="mg-auth-link mg-auth-link-secondary">Register</a>
                        }
                    </div>
                </div>
            </div>
        </header>

        <main class="mg-main">
            <div class="main-container">
                @RenderBody()
            </div>
        </main>

        <footer class="mg-footer">
            <div class="container">
                &copy; 2025 MineGuess · Hecho por Esteban y Ángel
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
